# IntroductionController
GET     /                           controllers.IntroductionController.index()
GET     /manual                     controllers.IntroductionController.manual()
GET     /work                       controllers.IntroductionController.work()
GET     /about                      controllers.IntroductionController.about()

# Productions
GET     /productions/manage         controllers.Productions.index()
POST    /createProduction           controllers.Productions.create()
GET     /image                      controllers.Productions.sendFile(filename: String)
GET     /newProduction              controllers.Productions.newProduction()
GET     /showProduction/:id         controllers.Productions.show(id: Long)

# UserController
GET     /login                      controllers.UserController.control()
POST    /login                      controllers.UserController.login()

# Assets
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
